<ul>
<% @attractions.each do |attraction| %>
  <% if !current_user.admin%>
    <li><%= link_to "Go on #{attraction.name}", attraction_path(attraction) %>
  <% else %>
    <li><%= link_to "Show #{attraction.name}", attraction_path(attraction) %>
  <% end %>
<% end %>
</ul>

<% if current_user.try(:admin) %>
  <%= link_to 'New Attraction', new_attraction_path %>
<% end %>